        {
            "type": "node",
            "request": "launch",
            "name": "Start server",
            "program": "${workspaceRoot}/dist/server.js",
            "preLaunchTask": "build",
            "cwd": "${workspaceRoot}",
            "outFiles": ["${workspaceRoot}/dist/**/*"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "test runner",
            "program": "${workspaceRoot}/dist/test/testRunner.js",
            "preLaunchTask": "build",
            "cwd": "${workspaceRoot}",
            "outFiles": ["${workspaceRoot}/dist/**/*"]
        }

    ]
}